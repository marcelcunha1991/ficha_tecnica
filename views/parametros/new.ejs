<%- include ('../partials/header.ejs') %>
<%- include ('../partials/sidebar.ejs') %>

<div class="container">

 
  <br>
    <div class="card">
            <div class="card-header">
                   
                        <h2>Novo Parâmetros de máquina</h2>
                    
            </div>
            <div class="card-body">
                    <form  method="POST" action="/parametrosReal/create">

                        <select name="maquinas" class="form-control">
                                <option > Selecione uma máquina</option>
                                <% maquinas.forEach((maquina) => { %>
                        
                                        <option value="<%= maquina.id %>"> <%= maquina.descricao %></option>
                        
                                <% }) %>
                        
                            </select>
                            
                            <br>
                            
                                <div>
                                        <label for="username"> Production Shot Min: </label>
                                        <input id="VI1_min" name="VI1_min" size="30" type="number" />
                                
                                        <label for="name">Production Shot Max: </label>
                                        <input id="VI1_max" name="VI1_max" size="30" type="number" />
                                </div>

                                <div>
                                        <label for="username">Cycle Time Min: </label>
                                        <input id="VI2_min" name="VI2_min" size="30" type="number" />
                                
                                        <label for="name">Cycle Time Max: </label>
                                        <input id="VI2_max" name="VI2_max" size="30" type="number" />
                                </div>

                                                    
                            <br>
                            <button class="btn btn-primary">Cadastrar</button>
                        </form>
            </div>
           
          
    </div>
   
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<%- include ('../partials/footer.ejs') %>